# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET            /                              controllers.MainRepoServerController.index()

# Templates
GET            /templates/:id                 controllers.TemplateRepoServerController.findTemplate(id: String, expanded: Boolean ?= false, validation: Boolean ?= false)

# Template Elements
GET            /template-elements/:id         controllers.TemplateElementRepoServerController.findTemplateElement(id: String, expanded: Boolean ?= false, validation: Boolean ?= false)

# Template Instances
GET            /template-instances/:id        controllers.TemplateInstanceRepoServerController.findTemplateInstance(id: String)

# For CORS - preflight request
OPTIONS        /*all                          controllers.MainRepoServerController.preflight(all)

## Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                     controllers.Assets.at(path="/public", file)
